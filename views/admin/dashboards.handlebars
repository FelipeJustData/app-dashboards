<h2>Dashboards</h2>
{{>_navbardashboards}}
<hr>
<p>Selecione um dashboard acima para visualizar</p>
{{#ifAdmin user.typ_user}}
<div class="container mt-4">
    <div class="row">
        {{#each dashboards}}
        <div class="col-4" style="margin-bottom: 20px;">
            <div class="card">
                <div class="card-body">
                    <h3>{{title}}</h3>
                    <p>{{description}}</p>                    
                    <a href="/admin/dashboards/{{id_dashboard}}"><button class="btn btn-info">Acessar
                            dashboard</button></a>
                    <a href="/admin/dashboard/deletedashboard/{{id_dashboard}}"><button class="btn btn-danger">Deletar </button></a>                            
                </div>
            </div>
        </div>
        {{else}}
        <p>Nenhum dashboard postado</p>
        {{/each}}
    </div>
</div>
{{/ifAdmin}}