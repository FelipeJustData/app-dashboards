<h2>Lista de dashboards:</h2>
<hr>
<a href="/admin/dashboards/add"><button class="btn btn-success">Adicionar nova dashboard</button></a>
<br><br>

{{#each dashboards}}
<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <a href="/admin/dashboards/addurl/{{id_dashboard}}"><button class="btn btn-info">Inserir detalhes</button></a>          
            <a href="/admin/dashboards/{{id_dashboard}}"><button class="btn btn-info">Acessar dashboard</button></a>
            
        </div>
    </div>
</div>

{{else}}
    <p>Nenhum dashboard postado</p>
{{/each}}