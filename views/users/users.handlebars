<h2>Adicionar usuário:</h2>
<hr>
<a href="/users/users-permissions"><button class="btn btn-success">Ver permissões dos usuários</button></a>
<a href="/users/register"><button class="btn btn-success">Adicionar novo Usuário</button></a>
<br><br>
<div class="row">
{{#each users}}
<div class="col-6">
    <div class="card mt-4">        
            <div class="card-body">
                <h5>{{name_user}}</h5>
                <small><b>{{typ_user}}</b></small><br>
                <small>{{email_user}}</small><br>
                <small>Data de criação: {{createdAt}}</small>
                <div class="row mt-2">
                    <div class="col-4"><a href="/users/users/permissions/{{id_user}}"><div class="btn btn-success">Permissões</div></a></div>
                    <div class="col-4"><a href="/users/users/edit/{{id_user}}"><div class="btn btn-success">Editar Usuário</div></a></div>
                    <div class="col-4">
                        <form action="/users/users/delete" method="POST">
                            <input type="hidden" name="id" value="{{id_user}}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir esse usuário?');">Deletar Usuário</button>
                        </form>
                    </div>
                </div>          
            </div>
    </div>             
</div>
{{else}}
<h3 class="mt-3">Nenhum usuário registrado</h3>
{{/each}}
</div>