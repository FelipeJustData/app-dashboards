<h2>Adicionar usuário:</h2>
<hr>
<a href="/users/register"><button class="btn btn-success">Adicionar novo Usuário</button></a>
<br><br>
<div class="row">
{{#each users}}
<div class="col-6">
    <div class="card mt-4">        
            <div class="card-body">
                <h5>{{name}}</h5>
                <small><b>{{user_type}}</b></small><br>
                <small>{{email}}</small><br>
                <small>Data de criação: {{createdAt}}</small>
                <div class="row mt-2">
                    <div class="col-6"><a href="/users/users/edit/{{id}}"><div class="btn btn-success">Editar Usuário</div></a></div>
                    <div class="col-6">
                        <form action="/users/users/delete" method="POST">
                            <input type="hidden" name="id" value="{{id}}">
                            <button type="submit" class="btn btn-danger">Deletar Usuário</button>
                        </form>
                    </div>
                </div>          
            </div>
    </div>             
</div>
{{else}}
<h3 class="mt-3">Nenhum usuário registrado</h3>
{{/each}}
</div>