<h2>Editar usuário</h2>
<div class="card">
    <div class="card-body">
        <form action="/users/users/edit" method="POST">
            <input type="hidden" id="id" name="id" value="{{user.id}}">
            <label for="name">Nome:</label>
            <input type="text" id="name" name="name" placeholder="Nome do usuário" class="form-control" value="{{user.name}}" required>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Email do usuário" class="form-control" value="{{user.email}}" required>
            <label for="user_type">Tipo de Usuário</label>            
            <select class="form-select" aria-label="Default select example" id="user_type" name="user_type" class="form-control"> 
            <option selected value="{{user.user_type}}">{{user.user_type}}</option>
            <option value="Leitor">Leitor</option>
            <option value="Editor">Editor</option>
            <option value="Administrador">Administrador</option>
            </select>
            <br>
            <button type="submit" class="btn btn-success">Salvar Edição</button>
        </form>
    </div>    
</div>
